@model hyperTROPHYbuddy.Models.WorkoutPlanAssignment

@{
    ViewData["Title"] = "Create";
}

<h1>Create Workout Plan Assignment</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="WorkoutPlanId" class="control-label">Workout Plan Name</label>
        <select asp-for="WorkoutPlanId" class="form-control" asp-items="ViewBag.WorkoutPlanId"></select>
        <span asp-validation-for="WorkoutPlanId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AssignedToClientId" class="control-label">Client Id</label>
        <select asp-for="AssignedToClientId" class="form-control" asp-items="ViewBag.AssignedToClientId"></select>
        <span asp-validation-for="AssignedToClientId" class="text-danger"></span>
    </div>
    <!-- AssignedByAdminId is set in the controller, not in the form -->
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
