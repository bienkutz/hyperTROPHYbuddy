@model hyperTROPHYbuddy.Models.WorkoutPlanAssignment

@{
    ViewData["Title"] = "Delete Assignment";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="fas fa-trash me-2 text-danger"></i>Delete Assignment</h1>
            <p class="text-muted lead">Remove workout plan assignment</p>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-lg mb-4">
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <div>
                        <h5 class="alert-heading mb-1">Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this assignment? This action cannot be undone.</p>
                    </div>
                </div>
            </div>

            <dl class="row">
                <dt class="col-sm-2">
                    <i class="fas fa-calendar-alt me-2 text-primary"></i>Plan Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WorkoutPlan.Name)
                </dd>
                <dt class="col-sm-2">
                    <i class="fas fa-user me-2 text-primary"></i>Assigned To
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Client.UserName)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="WorkoutPlanAssignmentId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>