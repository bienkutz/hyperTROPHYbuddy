@model hyperTROPHYbuddy.Models.WorkoutPlanAssignment

@{
    ViewData["Title"] = "Plan Assignment Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="fas fa-clipboard-check me-2 text-primary"></i>Assignment Details</h1>
            <p class="text-muted lead">View details of assigned workout plan</p>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-lg mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-file-alt me-2"></i>Assignment Information
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    <i class="fas fa-calendar-alt me-2 text-primary"></i>Plan Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WorkoutPlan.Name)
                </dd>
                <dt class="col-sm-2">
                    <i class="fas fa-user me-2 text-primary"></i>Assigned To
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Client.UserName)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
        <a asp-action="Delete" asp-route-id="@Model.WorkoutPlanAssignmentId" class="btn btn-danger ms-2">
            <i class="fas fa-trash me-2"></i>Delete Assignment
        </a>
    </div>
</div>