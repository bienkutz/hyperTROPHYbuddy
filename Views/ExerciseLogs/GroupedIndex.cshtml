@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "My Exercise Log History";
}

<h2>My Exercise Log History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Workout</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.WorkoutName</td>
                <td>
                    <a asp-action="DetailsByDate" asp-route-workoutId="@item.WorkoutId" asp-route-date="@item.Date.ToString("yyyy-MM-dd")" class="btn btn-primary btn-sm">
                        View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2">
    <a asp-controller="WorkoutPlanAssignments" asp-action="MyPlan" class="btn btn-secondary">Cancel</a>
</div>