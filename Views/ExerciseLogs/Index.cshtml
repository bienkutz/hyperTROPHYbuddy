@model IEnumerable<hyperTROPHYbuddy.Models.ExerciseLog>

@{
    ViewData["Title"] = "My Exercise Log History";
    var filteredWorkoutName = ViewBag.FilteredWorkoutName as string;
    var filteredExerciseName = ViewBag.FilteredExerciseName as string;
    var exercises = ViewBag.Exercises as List<hyperTROPHYbuddy.Models.Exercise>;
    int? workoutId = null;
    int? exerciseId = null;
    if (Context.Request.Query.ContainsKey("workoutId"))
    {
        int.TryParse(Context.Request.Query["workoutId"], out var wid);
        workoutId = wid;
    }
    if (Context.Request.Query.ContainsKey("exerciseId"))
    {
        int.TryParse(Context.Request.Query["exerciseId"], out var eid);
        exerciseId = eid;
    }
}

<h2>My Exercise Log History</h2>

@if (!string.IsNullOrEmpty(filteredWorkoutName))
{
    <div class="alert alert-info mb-3">
        Showing logs for workout: <strong>@filteredWorkoutName</strong>
        <a asp-action="Index" class="btn btn-link btn-sm">Show all logs</a>
    </div>
}

@if (!string.IsNullOrEmpty(filteredExerciseName))
{
    <div class="alert alert-info mb-3">
        Filtering by exercise: <strong>@filteredExerciseName</strong>
        <a asp-action="Index" asp-route-workoutId="@workoutId" class="btn btn-link btn-sm">Show all exercises</a>
    </div>
}

@if (exercises != null && exercises.Count > 0)
{
    <form method="get" asp-action="Index" class="mb-3">
        <input type="hidden" name="workoutId" value="@workoutId" />
        <div class="input-group" style="max-width: 400px;">
            <select name="exerciseId" class="form-select" onchange="this.form.submit()">
                <option value="">-- Filter by Exercise --</option>
                @foreach (var ex in exercises)
                {
                    <option value="@ex.ExerciseId" selected="@(exerciseId == ex.ExerciseId ? "selected" : null)">
                        @ex.Name
                    </option>
                }
            </select>
            <button type="submit" class="btn btn-outline-secondary">Filter</button>
        </div>
    </form>
}

<div>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Workout</th>
            <th>Exercise</th>
            <th>Set</th>
            <th>Reps</th>
            <th>Weight</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.LoggedAt.ToLocalTime().ToString("g")</td>
            <td>@log.Workout?.Name</td>
            <td>@log.Exercise?.Name</td>
            <td>@log.SetNumber</td>
            <td>@log.Reps</td>
            <td>@log.Weight</td>
        </tr>
    }
    </tbody>
</table>
</div>
<div class="d-flex gap-2">
    <a asp-controller="WorkoutPlanAssignments" asp-action="MyPlan" class="btn btn-secondary">Cancel</a>
</div>