@model hyperTROPHYbuddy.Models.Exercise

@{
    ViewData["Title"] = "Exercise Details";
}

<h1>@Model.Name</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Video Link</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.VideoLink))
        {
            <a href="@Model.VideoLink" target="_blank" rel="noopener">@Model.VideoLink</a>
        }
        else
        {
            <span class="text-muted">No video available.</span>
        }
    </dd>
</dl>
<div>
    @if (ViewBag.WorkoutPlanId != null)
    {
        <a asp-controller="WorkoutPlans" asp-action="Details" asp-route-id="@ViewBag.WorkoutPlanId">Back to Workout Plan</a>
    }
    else
    {
        <a asp-controller="WorkoutPlans" asp-action="Index">Back to Plans</a>
    }
</div>