@model IEnumerable<Workout>
@{
    ViewData["Title"] = "Workouts";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Workouts</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Workout</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Exercises</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in Model)
            {
                <tr>
                    <td>@workout.Name</td>
                    <td>
                        <small class="text-muted">
                            @workout.WorkoutExercises.Count exercise@(workout.WorkoutExercises.Count != 1 ? "s" : "")
                        </small>
                        <div class="small">
                            @string.Join(", ", workout.WorkoutExercises.Select(we => we.Exercise.Name))
                        </div>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@workout.Id" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@workout.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No workouts found. Create your first workout to get started.
    </div>
}