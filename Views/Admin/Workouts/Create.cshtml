@model Workout
@{
    ViewData["Title"] = "Create Workout";
    Layout = "_AdminLayout";
}

<h1>Create Workout</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Exercises (Select up to 10)</label>
        <select name="SelectedExerciseIds" class="form-control" multiple
                asp-items="@(new MultiSelectList(ViewBag.Exercises as IEnumerable<Exercise>, "Id", "Name"))">
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}