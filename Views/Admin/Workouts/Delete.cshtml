@model Workout
@{
    ViewData["Title"] = "Delete Workout";
    Layout = "_AdminLayout";
}

<h1>Delete Workout</h1>

<h3>Are you sure you want to delete this workout?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Exercises</dt>
        <dd class="col-sm-10">
            @foreach (var exercise in Model.WorkoutExercises)
            {
                <div>@exercise.Exercise.Name</div>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>