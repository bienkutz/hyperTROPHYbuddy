@model Workout
@{
    ViewData["Title"] = "Delete Workout";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6">
        <h1>Delete Workout</h1>

        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this workout?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title mb-0">@Model.Name</h5>
            </div>
            <div class="card-body">
                <h6>Exercises:</h6>
                <ul class="list-unstyled mb-0">
                    @foreach (var exercise in Model.WorkoutExercises)
                    {
                        <li>@exercise.Exercise.Name</li>
                    }
                </ul>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete Workout</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>