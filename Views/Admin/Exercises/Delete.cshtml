@model Exercise
@{
    ViewData["Title"] = "Delete Exercise";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6">
        <h1>Delete Exercise</h1>

        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this exercise?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                @if (!string.IsNullOrEmpty(Model.VideoLink))
                {
                    <a href="@Model.VideoLink" target="_blank" class="btn btn-sm btn-info">
                        <i class="bi bi-play-circle"></i> Watch Video
                    </a>
                }
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>