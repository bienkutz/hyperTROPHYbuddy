@{
    ViewData["Title"] = "Assign Plan to Client";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6">
        <h1>Assign Plan to Client</h1>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Plan Details</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@ViewBag.PlanName</dd>

                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">@ViewBag.PlanType</dd>

                    <dt class="col-sm-3">Workouts</dt>
                    <dd class="col-sm-9">@ViewBag.WorkoutCount</dd>
                </dl>
            </div>
        </div>

        <form asp-action="AssignToClient" method="post">
            <input type="hidden" name="planId" value="@ViewBag.PlanId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="form-label">Client ID</label>
                <input type="text" name="clientId" class="form-control" required />
                <small class="form-text text-muted">Enter the ID of the client to assign this plan to</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Assign Plan</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}