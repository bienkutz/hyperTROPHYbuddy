@model WorkoutPlan
@{
    ViewData["Title"] = "Delete Workout Plan";
    Layout = "_AdminLayout";
}

<h1>Delete Workout Plan</h1>

<h3>Are you sure you want to delete this plan?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Plan Type</dt>
        <dd class="col-sm-10">@Model.WorkoutPlanType.Name</dd>
        <dt class="col-sm-2">Workouts</dt>
        <dd class="col-sm-10">@Model.WorkoutPlanWorkouts.Count</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>