@model WorkoutPlan
@{
    ViewData["Title"] = "Create Workout Plan";
    Layout = "_AdminLayout";
}

<h1>Create Workout Plan</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkoutPlanTypeId" class="control-label"></label>
        <select asp-for="WorkoutPlanTypeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.PlanTypes, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Workouts (Select up to 7)</label>
        <select name="SelectedWorkoutIds" class="form-control" multiple
                asp-items="@(new MultiSelectList(ViewBag.Workouts, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}