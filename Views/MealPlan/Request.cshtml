@model hyperTROPHYbuddy.Controllers.SingleMealRequestViewModel
@{
    ViewData["Title"] = "Request Meal";
}
<h2>Request a Meal</h2>
<form asp-action="Request" method="post">
    <div>
        <label>User ID:</label>
        <input asp-for="UserId" />
    </div>
    <div>
        <label>Meal Calories:</label>
        <input asp-for="MealCalories" />
    </div>
    <div>
        <label>Meal Type (optional):</label>
        <select asp-for="MealType">
            <option value="">-- Any --</option>
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="dinner">Dinner</option>
            <option value="snack">Snack</option>
            <option value="main course">Main Course</option>
            <option value="side dish">Side Dish</option>
            <option value="dessert">Dessert</option>
        </select>
    </div>
    <button type="submit">Request Meal</button>
</form>
@if (ViewBag.Message != null)
{
    <div>@ViewBag.Message</div>
}