@model hyperTROPHYbuddy.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h2>@Model.Name</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Description</th>
                <th>Target Sets</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var we in Model.WorkoutExercises)
            {
                <tr>
                    <td>@we.Exercise.Name</td>
                    <td>@we.Exercise.Description</td>
                    <td>@we.TargetSets</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.WorkoutId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>