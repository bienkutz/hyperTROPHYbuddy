@model hyperTROPHYbuddy.Models.Workout

@{
    ViewData["Title"] = "Delete Workout";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="fas fa-trash me-2 text-danger"></i>Delete Workout</h1>
            <p class="text-muted lead">Permanently remove this workout</p>
        </div>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> Deleting this workout will also remove it from all Workout Plans that include it. This action cannot be undone.
    </div>

    <div class="card shadow-sm border-0 rounded-lg mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Are you sure you want to delete this workout?</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    <i class="fas fa-running me-2 text-primary"></i>Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            
            <div class="mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="WorkoutId" />
                    <div class="action-button-container">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary mt-3">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
