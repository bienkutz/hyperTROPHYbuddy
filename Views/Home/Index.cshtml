@{
    ViewData["Title"] = "Welcome to HyperTROPHY Buddy";
    Layout = User.Identity.IsAuthenticated ? 
        (User.IsInRole("Admin") ? "_AdminLayout" : "_ClientLayout") : 
        "_Layout";
}

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row mb-4">
            <div class="col">
                <h1>Welcome back, @ViewBag.UserName!</h1>
                @if (User.IsInRole("Admin"))
                {
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Exercises</h5>
                                    <p class="card-text">Manage your exercise library</p>
                                    <a asp-controller="Exercises" asp-action="Index" class="btn btn-primary">Go to Exercises</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Workouts</h5>
                                    <p class="card-text">Create and manage workouts</p>
                                    <a asp-controller="Workouts" asp-action="Index" class="btn btn-primary">Go to Workouts</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Plans</h5>
                                    <p class="card-text">Design workout plans</p>
                                    <a asp-controller="Plans" asp-action="Index" class="btn btn-primary">Go to Plans</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Assignments</h5>
                                    <p class="card-text">Assign plans to clients</p>
                                    <a asp-controller="Assign" asp-action="Index" class="btn btn-primary">Go to Assignments</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Your Workout Plans</h5>
                                    <p class="card-text">View and track your assigned workout plans</p>
                                    <a asp-controller="WorkoutPlans" asp-action="Index" class="btn btn-primary">Go to Plans</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Progress Tracking</h5>
                                    <p class="card-text">View your workout history and progress</p>
                                    <a asp-controller="Progress" asp-action="Index" class="btn btn-primary">View Progress</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row align-items-center py-5">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Transform Your Fitness Journey</h1>
                <p class="lead mb-4">
                    HyperTROPHY Buddy is your ultimate workout companion, connecting trainers with clients 
                    for personalized fitness experiences.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4 me-md-2">Get Started</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">Sign In</a>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/images/fitness-hero.jpg" class="img-fluid rounded shadow" alt="Fitness Training">
            </div>
        </div>

        <div class="row g-4 py-5">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h3>For Trainers</h3>
                        <ul class="list-unstyled">
                            <li>✓ Create custom exercises</li>
                            <li>✓ Design workout routines</li>
                            <li>✓ Build training plans</li>
                            <li>✓ Assign plans to clients</li>
                            <li>✓ Track client progress</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h3>For Clients</h3>
                        <ul class="list-unstyled">
                            <li>✓ Access personalized plans</li>
                            <li>✓ Log your workouts</li>
                            <li>✓ Track your progress</li>
                            <li>✓ View exercise guides</li>
                            <li>✓ Monitor achievements</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h3>Features</h3>
                        <ul class="list-unstyled">
                            <li>✓ Exercise library</li>
                            <li>✓ Custom workout builder</li>
                            <li>✓ Progress tracking</li>
                            <li>✓ Plan management</li>
                            <li>✓ Secure platform</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>