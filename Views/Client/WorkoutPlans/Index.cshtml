@model IEnumerable<ClientWorkoutPlan>

@{
    ViewData["Title"] = "Your Workout Plans";
    Layout = "_ClientLayout";
}

<div class="row mb-3">
    <div class="col">
        <h1>Your Workout Plans</h1>
    </div>
</div>

@foreach (var clientPlan in Model)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@clientPlan.WorkoutPlan.Name</h5>
            <span class="badge bg-secondary">@clientPlan.WorkoutPlan.WorkoutPlanType.Name</span>
        </div>
        <div class="card-body">
            <p class="text-muted">Assigned on @clientPlan.AssignedDate.ToShortDateString()</p>

            <h6>Workouts:</h6>
            <div class="list-group">
                @foreach (var workout in clientPlan.WorkoutPlan.WorkoutPlanWorkouts)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">@workout.Workout.Name</h6>
                            <small>@workout.Workout.WorkoutExercises.Count exercises</small>
                        </div>
                        <div>
                            <a asp-action="LogWorkout"
                               asp-route-clientWorkoutPlanId="@clientPlan.Id"
                               asp-route-workoutId="@workout.WorkoutId"
                               class="btn btn-primary btn-sm">Log Workout</a>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-3">
                <a asp-action="History"
                   asp-route-clientWorkoutPlanId="@clientPlan.Id"
                   class="btn btn-info">View History</a>
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        You don't have any workout plans assigned yet.
    </div>
}