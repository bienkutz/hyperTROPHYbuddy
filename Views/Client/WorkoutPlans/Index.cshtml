@model IEnumerable<ClientWorkoutPlan>

@{
    ViewData["Title"] = "Your Workout Plans";
    Layout = "_ClientLayout";
}

<h1>Your Workout Plans</h1>

<table class="table">
    <thead>
        <tr>
            <th>Plan Name</th>
            <th>Type</th>
            <th>Assigned On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clientPlan in Model)
        {
            <tr>
                <td>@clientPlan.WorkoutPlan.Name</td>
                <td>@clientPlan.WorkoutPlan.WorkoutPlanType.Name</td>
                <td>@clientPlan.AssignedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="History" asp-route-clientWorkoutPlanId="@clientPlan.Id"
                       class="btn btn-sm btn-info">View History</a>
                </td>
            </tr>
            @foreach (var workout in clientPlan.WorkoutPlan.WorkoutPlanWorkouts)
            {
                <tr>
                    <td colspan="3" style="padding-left: 50px;">
                        @workout.Workout.Name (@workout.Workout.WorkoutExercises.Count exercises)
                    </td>
                    <td>
                        <a asp-action="LogWorkout"
                           asp-route-clientWorkoutPlanId="@clientPlan.Id"
                           asp-route-workoutId="@workout.WorkoutId"
                           class="btn btn-sm btn-primary">Log Workout</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>